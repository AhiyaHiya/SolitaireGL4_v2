  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug C++ (LLDB)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/solitaire",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "sourceLanguages": [
        "cpp"
      ],
      "preLaunchTask": "build"
    },
    {
      "name": "Debug ASan (LLDB)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build-asan/solitaire",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build: asan",
      "env": {
        "ASAN_OPTIONS": "detect_leaks=1:abort_on_error=1"
      }
    },
    {
      "name": "Debug TSan (LLDB)",
      "type": "lldb",
